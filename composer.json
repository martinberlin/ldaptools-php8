{
    "name": "ldaptools/ldaptools-php8",
    "type": "library",
    "description": "LdapTools is a feature-rich LDAP library for PHP 7.3+",
    "keywords": [
        "ldap",
        "Active Directory",
        "Microsoft Exchange",
        "OpenLDAP"
    ],
    "homepage": "http://www.phpldaptools.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Chad Sikorra",
            "email": "Chad.Sikorra@gmail.com",
            "homepage": "http://www.chadsikorra.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "chadsikorra/php-simple-enum": "^1.0",
        "symfony/yaml": "^6.1",
        "symfony/event-dispatcher": "^6.1",
        "ramsey/uuid": "^4.6"
    },
    "suggest": {
        "tedivm/stash": "Provides the cache_type 'stash' to help increase performance.",
        "doctrine/cache": "Provides the cache_type 'doctrine' to help increase performance.",
        "ext-mbstring": "Better UTF-8 handling.",
        "ext-intl": "Better UTF-8 handling."
    },
    "require-dev": {
        "phpspec/phpspec": "~7.2",
        "tedivm/stash": "~0.17.0",
        "doctrine/cache": "~1.0"
    },
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "8.1.11",
            "ext-ldap": "1"
        }
    },
    "autoload": {
        "psr-4": {"LdapTools\\": "src/LdapTools"}
    }
}
